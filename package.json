{
  "name": "silver-formily",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "build:changed": "node scripts/build-changed.mjs",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "commit": "czg",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build:changed && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@eslint/markdown": "^6.6.0",
    "@types/node": "^24.0.0",
    "cz-git": "^1.12.0",
    "czg": "^1.12.0",
    "eslint": "^9.36.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vue": "^10.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.1",
    "turbo": "^2.8.5",
    "typescript": "5.9.2",
    "vitest": "^4.0.16"
  }
