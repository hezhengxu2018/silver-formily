{
  "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "main",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "preRelease": false
  },
  "npm": {
    "publish": true,
    "tag": "latest",
    "tokenRef": "NPM_TOKEN"
  },
  "hooks": {
    "before:init": ["npm run lint"],
    "after:release": "echo 发布完成！"
  }
}
