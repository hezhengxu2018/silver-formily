{
  "$schema": "https://unpkg.com/release-it@19.2.2/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["pnpm run lint"],
    "after:release": "echo 发布完成！"
  }
}
